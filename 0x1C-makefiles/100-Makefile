CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic -std=gnu89 -g

SRC = main.c school.c

OBJ = $(SRC:%.c=%.o)

NAME = school

RM = rm -rf

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

